---
import Layout from "../layouts/Layout.astro"

import AboutMe from "../components/AboutMe.astro"
import Badge from "../components/Badge.astro"
import CodeIcon from "../components/icons/Code.astro"
import GitHubIcon from "../components/icons/GitHub.astro"
import LinkedInIcon from "../components/icons/LinkedIn.astro"
import MailIcon from "../components/icons/Mail.astro"
import ProfileCheck from "../components/icons/ProfileCheck.astro"
import Projects from "../components/Projects.astro"
import SectionContainer from "../components/SectionContainer.astro"
import SocialPill from "../components/SocialPill.astro"
import Technologies from "../components/Technologies.astro"
import Gizmo from "../components/icons/ProjectIcon.astro"
import Download from "../components/icons/Download.astro"
import ContactIcon from "../components/icons/ContactIcon.astro"
import ContactForm from "../components/ContactForm.astro"

---
<script type="module" src="../Script.js"/>

<Layout
  title="Porfolio de Manuel Marienhoff - Desarrollador y Programador Web"
  description="Contrata a Manuel para crear tu aplicación web o móvil. Desarrollador Web y Creador de Contenido. Especializado en crear aplicaciones únicas."
>
  <main class="px-4">
    <SectionContainer class="py-44 pb-32 mb-2">
      <h1
        class="text-white/85 text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
      >
        Hola, soy Manuel <a
          href="https://www.linkedin.com/in/manuel-marienhoff-6bb1422b0/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center hover:scale-105 transition"
        >
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>
      <h2
        class="text-yellow-400 text-xl lg:text-2xl text-balance max-w-[700px]"
      >
        <span>Desarrollador Web Full Stack.</span>
        <span class="text-white/60">
          De Buenos Aires, Argentina.</span
        >

      </h2>

      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill href="https://www.linkedin.com/in/manuel-marienhoff-6bb1422b0/">
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/ManuelMarienhoff">
          <GitHubIcon class="size-4 md:size-6" />
          GitHub
        </SocialPill>
        <SocialPill href="mailto:manuelmarienhoff1@gmail.com">
          <MailIcon class="size-4 md:size-6" />
          manuelmarienhoff1@gmail.com
        </SocialPill>
        <SocialPill href="/CV-MANUEL-MARIENHOFF.pdf" download="CV-MANUEL-MARIENHOFF.pdf">
          Descargar CV
          <Download class="size-4 md:size-6" />
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id="proyectos">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-white/85"
      >
        <CodeIcon class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>

    <SectionContainer id="sobre-mi">
      <h2
      class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-white/85"
      >
      <ProfileCheck class="size-7" />
      Sobre mi
    </h2>
    <AboutMe />
    </SectionContainer>
    <SectionContainer id="contacto">
      <h2
      class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-white/85"
      >
      <ContactIcon class="size-7"/>Contacto
      </h2>
      <h4 class="text-white mb-8">Contáctame directamente a <a class="underline text-yellow-400 font-semibold" href="mailto:manuelmarienhoff1@gmail.com">manuelmarienhoff1@gmail.com</a> o mediante el siguiente formulario.</h4>
      <ContactForm/>
    </SectionContainer>
    
    <SectionContainer id="tecnologias">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-white/85"><Gizmo class="size-4 md:size-6" />Tecnologías</h2>
      <Technologies/>
    </SectionContainer>
    
</main>
</Layout>
